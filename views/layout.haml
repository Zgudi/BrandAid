%html
  %head
    %link{href: "#{url('/stylesheets/reset.css')}", rel: "stylesheet", type: "text/css"}
    %link{href: "#{url('/stylesheets/bootstrap.css')}", rel: "stylesheet", type: "text/css"}
    %link{href: "#{url('/stylesheets/pick-a-color-1.2.0.min.css')}", rel: "stylesheet", type: "text/css"}
    %link{href: "#{url('/stylesheets/style.css')}", rel: "stylesheet", type: "text/css"}
    %script{src: "#{url('/javascripts/jquery.js')}"}
    %script{src: "#{url('/javascripts/bootstrap.min.js')}"}
    %script{src: "//ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js"}
    %script{src: "#{url('/javascripts/tinycolor-0.9.14.min.js')}"}
    %script{src: "#{url('/javascripts/pick-a-color-1.2.2.min.js')}"}
    %script{src: "#{url('/javascripts/brand.js')}"}

  %body
    %header.navbar
      .container
        .navbar-header
          %a{:class => "navbar-brand", :href => "/index"} BRANDAID
        %nav.collapse.navbar-collapse.main-navbar-collapse
          %ul.nav.navbar-nav
            %li
              %a{ :href => "/brands/index"} My brands
            %li
              %a{ :href => "/brands/new"} New brand
            %li
              %a{ :href => "/index"} Contact

          %ul.nav.navbar-nav.navbar-right.nav-user
            - if current_user.present?
              %li.navbar-text.text-left Signed in as
              %li
                %a.logged_in{ :href => "/users/profile"}
                  = current_user.login
              %li
                %a{ :href => "/users/sign_out"} Sign Out
            - else

              %li
                %a.login{ :href => "/users/login"} Login
              %li.navbar-text or
              %li
                %a{ :href => "/users/new"} Register

    = yield
